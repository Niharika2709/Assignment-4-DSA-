QUESTION 4) Write a program to find first non-repeating character in a string using Queue.     
Sample I/P: a a b c  Sample O/P: a -1 b b

#include <iostream>
#include <queue>
using namespace std;

void firstNonRepeating(string str) {
    queue<char> q;
    int freq[26] = {0};

    for (char ch : str) {
        
        q.push(ch);
        
        freq[ch - 'a']++;

        
        while (!q.empty() && freq[q.front() - 'a'] > 1) {
            q.pop();
        }

        
        if (q.empty()) cout << "-1 ";
        else cout << q.front() << " ";
    }
    cout << endl;
}

int main() {
    string s;
    cout << "Enter string (lowercase letters): ";
    cin >> s;

    cout << "First non-repeating characters: ";
    firstNonRepeating(s);

    return 0;
}
